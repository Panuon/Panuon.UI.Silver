<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Panuon.WPF.UI"
                    xmlns:core="clr-namespace:Panuon.WPF;assembly=Panuon.WPF"
                    xmlns:i="clr-namespace:Panuon.WPF.UI.Internal"
                    xmlns:rs="clr-namespace:Panuon.WPF.UI.Resources"
                    xmlns:irs="clr-namespace:Panuon.WPF.UI.Internal.Resources">
    <ResourceDictionary.MergedDictionaries>
        <core:SharedResourceDictionary Source="pack://application:,,,/Panuon.WPF.UI;component/Resources/Converters.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="{x:Static irs:TemplateKeys.ScrollableControlTemplate}"
                     TargetType="i:ScrollableControl">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <RepeatButton x:Name="rptBack"
                          Style="{TemplateBinding ScrollButtonStyle}"
                          Visibility="Collapsed"
                          CommandTarget="{Binding ElementName=scvViewer}" />
            <ScrollViewer x:Name="scvViewer">
                <ContentPresenter />
            </ScrollViewer>
            <RepeatButton x:Name="rptFore"
                          Style="{TemplateBinding ScrollButtonStyle}"
                          Visibility="Collapsed"
                          CommandTarget="{Binding ElementName=scvViewer}" />
        </Grid>
        <ControlTemplate.Triggers>
            <Trigger Property="Orientation"
                     Value="Horizontal">
                <Setter TargetName="rptBack"
                        Property="Grid.Column"
                        Value="0" />
                <Setter TargetName="rptBack"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="scvViewer"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="scvViewer"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="rptFore"
                        Property="Grid.Column"
                        Value="2" />
                <Setter TargetName="rptFore"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="scvViewer"
                        Property="VerticalScrollBarVisibility"
                        Value="Disabled" />
                <Setter TargetName="scvViewer"
                        Property="HorizontalScrollBarVisibility"
                        Value="Hidden" />
                <Setter TargetName="rptBack"
                        Property="Tag"
                        Value="Left" />
                <Setter TargetName="rptFore"
                        Property="Tag"
                        Value="Right" />
            </Trigger>
            <Trigger Property="Orientation"
                     Value="Vertical">
                <Setter TargetName="rptBack"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="rptBack"
                        Property="Grid.Row"
                        Value="0" />
                <Setter TargetName="scvViewer"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="scvViewer"
                        Property="Grid.Row"
                        Value="1" />
                <Setter TargetName="rptFore"
                        Property="Grid.Column"
                        Value="1" />
                <Setter TargetName="rptFore"
                        Property="Grid.Row"
                        Value="2" />
                <Setter TargetName="scvViewer"
                        Property="VerticalScrollBarVisibility"
                        Value="Hidden" />
                <Setter TargetName="scvViewer"
                        Property="HorizontalScrollBarVisibility"
                        Value="Disabled" />
                <Setter TargetName="rptBack"
                        Property="Tag"
                        Value="Up" />
                <Setter TargetName="rptFore"
                        Property="Tag"
                        Value="Down" />
            </Trigger>
            <Trigger Property="ScrollButtonVisibility"
                     Value="Visible">
                <Setter TargetName="rptBack"
                        Property="Visibility"
                        Value="Visible" />
                <Setter TargetName="rptFore"
                        Property="Visibility"
                        Value="Visible" />
            </Trigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Orientation"
                               Value="Horizontal" />
                    <Condition Property="ScrollButtonVisibility"
                               Value="VisibleOnOversize" />
                </MultiTrigger.Conditions>
                <Setter TargetName="rptBack"
                        Property="Visibility">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.ScrollableControlScrollButtonVisibilityConverter}}">
                            <Binding Path="ActualWidth"
                                     RelativeSource="{RelativeSource TemplatedParent}"
                                     Mode="OneWay" />
                            <Binding Path="ExtentWidth"
                                     ElementName="scvViewer"
                                     Mode="OneWay" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
                <Setter TargetName="rptFore"
                        Property="Visibility">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.ScrollableControlScrollButtonVisibilityConverter}}">
                            <Binding Path="ActualWidth"
                                     RelativeSource="{RelativeSource TemplatedParent}"
                                     Mode="OneWay"/>
                            <Binding Path="ExtentWidth"
                                     ElementName="scvViewer"
                                     Mode="OneWay" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>
            <MultiTrigger>
                <MultiTrigger.Conditions>
                    <Condition Property="Orientation"
                               Value="Vertical" />
                    <Condition Property="ScrollButtonVisibility"
                               Value="VisibleOnOversize" />
                </MultiTrigger.Conditions>
                <Setter TargetName="rptBack"
                        Property="Visibility">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.ScrollableControlScrollButtonVisibilityConverter}}">
                            <Binding Path="ActualHeight"
                                     RelativeSource="{RelativeSource TemplatedParent}"
                                     Mode="OneWay" />
                            <Binding Path="ExtentHeight"
                                     ElementName="scvViewer"
                                     Mode="OneWay" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
                <Setter TargetName="rptFore"
                        Property="Visibility">
                    <Setter.Value>
                        <MultiBinding Converter="{StaticResource {x:Static irs:ConverterKeys.ScrollableControlScrollButtonVisibilityConverter}}">
                            <Binding Path="ActualHeight"
                                     RelativeSource="{RelativeSource TemplatedParent}"
                                     Mode="OneWay" />
                            <Binding Path="ExtentHeight"
                                     ElementName="scvViewer"
                                     Mode="OneWay" />
                        </MultiBinding>
                    </Setter.Value>
                </Setter>
            </MultiTrigger>

        </ControlTemplate.Triggers>
    </ControlTemplate>

</ResourceDictionary>
