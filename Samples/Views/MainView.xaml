        <pu:Drawer IsOpen="False"
                   Placement="Right"
                   HorizontalAlignment="Right"
                   Width="500"
                   MinWidth="50"
                   BorderBrush="Red"
                   BorderThickness="1"
                   Background="White"
                   ShadowColor="Black"
                   AnimationEase="CubicOut"
                   AnimationDuration="0:0:0.4">
            <ToggleButton Content="OP"
