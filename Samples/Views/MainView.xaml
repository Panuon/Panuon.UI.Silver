                <TextBlock Grid.Row="2"
                           FontSize="14"
                           Foreground="Gray"
                           HorizontalAlignment="Right"
                           Text="{Binding Now, Source={x:Static pu:Tools.DateTime}, StringFormat='MM/dd/yyyy HH:mm:ss'}">
                    <TextBlock.ContextMenu>
